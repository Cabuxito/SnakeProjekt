<Window x:Class="SnakeProjekt.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeProjekt"
        mc:Ignorable="d"
        Title="Settings"  SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Height="200" Width="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label FontWeight="DemiBold" FontSize="20" Content="Delete highscore" HorizontalAlignment="Center" Margin="0,5"/>
        <Button Grid.Column="1" Height="40" Width="140" FontSize="9" Content="Delete Data"  Margin="0,0,0,5" Click="CleanList_Click" />
        
    </Grid>
</Window>
